@model IEnumerable<ProyectoºMVC.Models.cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Clientes</h2>

<p>
    @Html.ActionLink("Crear Cliente", "Create")
</p>


@*<p>
    @Html.ActionLink("Imprimir reporte", "PdfReporte")
<p>*@
    



<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.documento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.documento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Elimar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }



</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Esta seguro de eliminar?')) {
                event.preventDefault();
            }
        })
    </script>
}